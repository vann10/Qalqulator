<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qalqulator" parent="Theme.MaterialComponents.DayNight">
        <!--   Color for the app bar and other primary UI elements. -->
        <item name="colorPrimary">@color/bgLight</item>
        <!--   A darker variant of the primary color, used for
       the status bar (on Android 5.0+) and contextual app bars. -->
        <item name="colorPrimaryDark">@color/bgLight</item>
        <!--   a secondary color for controls like checkboxes and text fields. -->
        <item name="colorAccent">@color/textLight</item>
    </style>

    <style name="bgStyle">
        <item name="android:background">@color/bgLight</item>
    </style>

    <style name="bg2Style">
        <item name="android:background">@color/secBgLight</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@color/bgLight</item>
    </style>

    <style name="outputStyle">
        <item name="android:textColor">@color/outputLight</item>
    </style>

</resources>